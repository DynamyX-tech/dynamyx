---
import "@fontsource/barlow";
import "@fontsource/space-mono";
import "@/styles/admin.css";
import Sidebar from "@/components/AdminPanel/Sidebar";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Building amazing solutions that matter."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Kalex Admin Panel</title>
  </head>
  <body class="flex">
    <Sidebar client:load />
    <div class="h-full w-full px-8 py-12">
      <h1 class="text-[1.5rem] font-bold text-white">Dashboard</h1>
      <p class="text-white">Overview of Kalex Dashboard</p>
    </div>
    <script is:inline>
      document.documentElement.classList.add("dark");
    </script>
  </body>
</html>
